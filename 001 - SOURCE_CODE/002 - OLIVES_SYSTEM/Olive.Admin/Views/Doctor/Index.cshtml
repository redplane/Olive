@using Olive.Admin.Enumerations
@using Olive.Admin.Resources
@using Shared.Constants
@using Shared.Enumerations
@using SortDirection = System.Web.Helpers.SortDirection

@{
    Layout = "~/Views/Shared/_AuthorizedView.cshtml";
    ViewBag.Title = Olive_Admin_Language.Doctor;
    ViewBag.ContentLarge = Olive_Admin_Language.Account;
    ViewBag.ContentSmall = Olive_Admin_Language.Doctor;
}

<link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />
<section ng-app="DoctorModule"
         ng-controller="DoctorController"
         class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default collapsed-box">
                <div class="box-header">
                    <span class="glyphicon glyphicon-filter"></span> <span class="box-title">Account filter</span>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool"
                                data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>

                <div class="box-body">

                    <div class="col-md-6">

                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control"
                                   maxlength="64"
                                   type="email" />
                        </div>

                        <div class="form-group">
                            <label>Phone</label>
                            <input type="tel"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Created [Min]</label>

                            <div id="dtpCreatedMin"
                                 class="input-group date" data-provide="datepicker">
                                <input type="text" class="form-control">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Created [Max]</label>

                            <div id="dtpCreatedMax"
                                 class="input-group date"
                                 data-provide="datepicker">
                                <input type="text" class="form-control">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">

                            <label>Sort property</label>
                            <select id="lstSortProperty"
                                    class="form-control">
                                <option value="@((int) FilterDoctorSort.Status)"
                                        selected="selected">
                                    Status
                                </option>
                                <option value="@((int) FilterDoctorSort.Birthday)">Birthday</option>
                                <option value="@((int) FilterDoctorSort.Created)">Created</option>
                                <option value="@((int) FilterDoctorSort.FirstName)">First name</option>
                                <option value="@((int) FilterDoctorSort.Gender)">Gender</option>
                                <option value="@((int) FilterDoctorSort.LastModified)">Last modified</option>
                                <option value="@((int) FilterDoctorSort.LastName)">Last name</option>
                                <option value="@((int) FilterDoctorSort.Rank)">Rank</option>
                            </select>
                        </div>

                        <div class="form-group">

                            <label>Sort direction</label>
                            <select id="lstSortDirection"
                                    class="form-control">
                                <option value="@((int) SortDirection.Ascending)"
                                        selected="selected">
                                    Ascending
                                </option>
                                <option value="@((int) SortDirection.Descending)">Descending</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Statuses</label>
                            <select class="form-control"
                                    multiple="multiple"
                                    size="3">
                                <option value="@((int)StatusAccount.Inactive)" selected="selected">Inactive</option>
                                <option value="@((int)StatusAccount.Pending)" selected="selected">Pending</option>
                                <option value="@((int)StatusAccount.Active)" selected="selected">Active</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">

                        <div class="form-group">
                            <label>First name</label>
                            <input class="form-control"
                                   maxlength="32"
                                   type="email" />
                        </div>

                        <div class="form-group">
                            <label>Last name</label>
                            <input type="text"
                                   class="form-control"
                                   maxlength="32" />
                        </div>

                        <div class="form-group">
                            <label>Birthday [Min]</label>

                            <div id="dtpBirthdayMin"
                                 class="input-group date"
                                 data-provide="datepicker">
                                <input type="text" class="form-control">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Birthday [Max]</label>

                            <div id="dtpBirthdayMax"
                                 class="input-group date"
                                 data-provide="datepicker">
                                <input type="text" class="form-control">
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-th"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Rank [Min]</label>

                            <input id="txtMinRank"
                                   type="number"
                                   class="form-control"
                                   min="@Values.MinDoctorRank"
                                   max="@Values.MaxDoctorRank" />
                        </div>

                        <div class="form-group">
                            <label>Rank [Max]</label>

                            <input id="txtMaxRank"
                                   type="number"
                                   class="form-control"
                                   min="@Values.MinDoctorRank"
                                   max="@Values.MaxDoctorRank" />
                        </div>

                        <div class="form-group">
                            <label>Records</label>
                            <input class="form-control"
                                   type="number"
                                   min="1"
                                   max="@FieldLength.RecordMax" />
                        </div>
                    </div>

                </div>

                <div class="box-footer">
                    <button class="btn btn-primary btn-flat btn-block">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4"
             ng-repeat="doctor in data.Doctors">
            <div class="box {{convertToBoxClass(doctor.Status)}} collapsed-box">
                
                <div class="box-header with-border">

                    <div class="box-tools pull-right">
                        <button type="button"
                                class="btn btn-box-tool"
                                data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>

                    <span class="fa fa-male"
                          ng-if="doctor.Gender == 0"></span>
                    <span class="fa fa-female"
                          ng-if="doctor.Gender == 1"></span>
                    <span class="fa fa-genderless"
                          ng-if="doctor.Gender != 0 && doctor.Gender != 1"></span>
                    <b>{{doctor.Email}}</b>
                </div>
                <div class="box-body">
                    <table class="table table-condensed table-striped">
                        <tbody>
                        <tr>
                            <th><span class="glyphicon glyphicon-credit-card"></span></th>
                            <td><span>{{doctor.FirstName}} {{doctor.LastName}}</span></td>
                        </tr>
                        <tr>
                            <th><span class="fa fa-birthday-cake"></span></th>
                            <td><span>{{doctor.Birthday}}</span></td>
                        </tr>
                        <tr>
                            <th><span class="fa fa-phone"></span></th>
                            <td><span>{{doctor.Phone}}</span></td>
                        </tr>
                        <tr>
                            <th><span class="fa fa-clock-o"></span></th>
                            <td><span>{{doctor.Created}}</span></td>
                        </tr>
                        <tr>
                            <th><span class="fa fa-home"></span></th>
                            <td><span>{{doctor.Address}}</span></td>
                        </tr>
                        <tr>
                            <th><span class="glyphicon glyphicon-king"></span></th>
                            <td><span>{{doctor.Rank}}</span></td>
                        </tr>
                        <tr>
                            <th><span class="glyphicon glyphicon-education"></span></th>
                            <td><span>{{doctor.Voters}}</span></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary btn-flat btn-block"
                            ng-show="doctor.Status !== 2"
                            ng-hide="doctor.Status === 2">
                        Activate
                    </button>
                    
                    <button class="btn btn-danger btn-flat btn-block"
                            ng-show="doctor.Status === 2">
                        Disable
                    </button>
                    
                </div>
            </div>
        </div>
    </div>

</section>

