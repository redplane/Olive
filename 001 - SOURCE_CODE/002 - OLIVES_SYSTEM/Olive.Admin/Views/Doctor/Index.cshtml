@using Olive.Admin.Resources

@{
    Layout = "~/Views/Shared/_AuthorizedView.cshtml";
    ViewBag.Title = Olive_Admin_Language.Doctor;
    ViewBag.ContentLarge = Olive_Admin_Language.Account;
    ViewBag.ContentSmall = Olive_Admin_Language.Doctor;
}

<link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />
<section ng-app="DoctorModule"
         ng-controller="DoctorController"
         class="content">

    <!-- Account filter box-->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default collapsed-box">
                <div class="box-header">
                    <span class="glyphicon glyphicon-filter"></span> <span class="box-title">Doctor filter</span>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool"
                                data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>

                <div class="box-body">

                    <div class="col-md-6">
                        <!-- Email -->
                        <div class="form-group">
                            <label>Email</label>
                            <input ng-model="filterDoctorViewModel.email"
                                   class="form-control"
                                   maxlength="64"
                                   type="text" />
                        </div>

                        <!-- Phone -->
                        <div class="form-group">
                            <label>Phone</label>
                            <input ng-model="filterDoctorViewModel.phone"
                                   class="form-control" />
                        </div>

                        <!-- MinCreated -->
                        <div class="form-group">
                            <label>Created [Min]</label>

                            <p class="input-group">
                                <input type="text"
                                       class="form-control"
                                       uib-datepicker-popup="yyyy-MM-dd"
                                       ng-model="filterDoctorViewModel.minCreated"
                                       is-open="datePickerToggleState.minCreated"
                                       datepicker-options="globalDateTimeOptions"
                                       ng-required="true"
                                       close-text="Close"
                                       alt-input-formats="altInputFormats" />

                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="datePickerToggleState.openMinCreated();">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>

                        </div>

                        <!-- MaxCreated -->
                        <div class="form-group">
                            <label>Created [Max]</label>

                            <p class="input-group">
                                <input type="text"
                                       class="form-control"
                                       uib-datepicker-popup="yyyy-MM-dd"
                                       ng-model="filterDoctorViewModel.maxCreated"
                                       is-open="datePickerToggleState.maxCreated"
                                       datepicker-options="globalDateTimeOptions"
                                       ng-required="true"
                                       close-text="Close"
                                       alt-input-formats="altInputFormats" />

                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="datePickerToggleState.openMaxCreated();">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>

                        </div>

                        <!-- Sort properties -->
                        <div class="form-group">

                            <label>Sort property</label>
                            <select class="form-control"
                                    ng-options="sortProperty.value as sortProperty.text for sortProperty in filterDoctorSort"
                                    ng-model="filterDoctorViewModel.sort"></select>
                        </div>

                        <!-- Sort directions -->
                        <div class="form-group">

                            <label>Sort direction</label>
                            <select ng-options="sortDirection.value as sortDirection.text for sortDirection in sortDirections"
                                    class="form-control"
                                    ng-model="filterDoctorViewModel.direction"></select>
                        </div>
                        
                        <!-- Statuses -->
                        <div class="form-group">
                            <label>Statuses</label>

                            <select class="form-control"
                                    ng-options="filterStatus.value as filterStatus.text for filterStatus in filterStatuses"
                                    multiple="multiple"
                                    ng-model="filterDoctorViewModel.statuses"
                                    size="3">
                            </select>
                        </div>
                    
                        <!-- Genders -->
                        <div class="form-group">
                            <label>Genders</label>

                            <select class="form-control"
                                    ng-options="gender.value as gender.text for gender in genders"
                                    multiple="multiple"
                                    ng-model="filterDoctorViewModel.genders"
                                    size="2"></select>
                        </div>

                    </div>

                    <div class="col-md-6">

                        <!-- First name -->
                        <div class="form-group">
                            <label>First name</label>
                            <input ng-model="filterAccountViewModel.firstName"
                                   class="form-control"
                                   maxlength="32"
                                   type="email" />
                        </div>

                        <!-- Last name -->
                        <div class="form-group">
                            <label>Last name</label>
                            <input ng-model="filterAccountViewModel.lastName"
                                   type="text"
                                   class="form-control"
                                   maxlength="32" />
                        </div>

                        <!-- MinBirthday -->
                        <div class="form-group">
                            <label>Birthday [Min]</label>

                            <p class="input-group">
                                <input type="text"
                                       class="form-control"
                                       uib-datepicker-popup="yyyy-MM-dd"
                                       ng-model="filterDoctorViewModel.minBirthday"
                                       is-open="datePickerToggleState.minBirthday"
                                       datepicker-options="globalDateTimeOptions"
                                       ng-required="true"
                                       close-text="Close"
                                       alt-input-formats="altInputFormats" />

                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="datePickerToggleState.openMinBirthday();">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>

                        </div>

                        <!-- MaxBirthday -->
                        <div class="form-group">
                            <label>Birthday [Max]</label>

                            <p class="input-group">
                                <input type="text"
                                       class="form-control"
                                       uib-datepicker-popup="yyyy-MM-dd"
                                       ng-model="filterDoctorViewModel.maxBirthday"
                                       is-open="datePickerToggleState.maxBirthday"
                                       datepicker-options="globalDateTimeOptions"
                                       ng-required="true"
                                       close-text="Close"
                                       alt-input-formats="altInputFormats" />

                                <span class="input-group-btn">
                                    <button type="button"
                                            class="btn btn-default"
                                            ng-click="datePickerToggleState.openMaxBirthday();">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                            </p>

                        </div>

                        <!-- MinRank -->
                        <div class="form-group">
                            <label>Rank [Min]</label>

                            <input ng-model="filterDoctorViewModel.minRank"
                                   type="number"
                                   class="form-control"
                                   min="0"
                                   max="5" />
                        </div>

                        <!-- MaxRank -->
                        <div class="form-group">
                            <label>Rank [Max]</label>

                            <input ng-model="filterDoctorViewModel.maxRank"
                                   type="number"
                                   class="form-control"
                                   min="0"
                                   max="5" />
                        </div>

                        <!-- Record -->
                        <div class="form-group">
                            <label>Records</label>
                            <input ng-model="filterDoctorViewModel.records"
                                   class="form-control"
                                   type="number"
                                   min="1"
                                   max="20" />
                        </div>
                    </div>

                </div>
                
            <div class="box-footer">
                <button class="btn btn-danger btn-flat btn-block"
                        ng-click="reset()">
                    Reset
                </button>
            </div>

            <div class="box-footer">
                <button class="btn btn-primary btn-flat btn-block"
                        ng-click="initialLoad()">
                    OK
                </button>
            </div>
                
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4"
             ng-repeat="doctor in data.Doctors">
            <div class="box {{convertToBoxClass(doctor.Status)}} collapsed-box">

                <div class="box-header with-border">

                    <div class="box-tools pull-right">
                        <button type="button"
                                class="btn btn-box-tool"
                                data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>

                    <span class="fa fa-male"
                          ng-if="doctor.Gender == 0"></span>
                    <span class="fa fa-female"
                          ng-if="doctor.Gender == 1"></span>
                    <span class="fa fa-genderless"
                          ng-if="doctor.Gender != 0 && doctor.Gender != 1"></span>
                    <b>{{doctor.Email}}</b>
                </div>
                <div class="box-body">
                    <table class="table table-condensed table-striped">
                        <tbody>
                            <tr>
                                <th><span class="glyphicon glyphicon-credit-card"></span></th>
                                <td><span>{{doctor.FirstName}} {{doctor.LastName}}</span></td>
                            </tr>
                            <tr>
                                <th><span class="fa fa-birthday-cake"></span></th>
                                <td><span>{{doctor.Birthday}}</span></td>
                            </tr>
                            <tr>
                                <th><span class="fa fa-phone"></span></th>
                                <td><span>{{doctor.Phone}}</span></td>
                            </tr>
                            <tr>
                                <th><span class="fa fa-clock-o"></span></th>
                                <td><span>{{doctor.Created}}</span></td>
                            </tr>
                            <tr>
                                <th><span class="fa fa-home"></span></th>
                                <td><span>{{doctor.Address}}</span></td>
                            </tr>
                            <tr>
                                <th><span class="glyphicon glyphicon-king"></span></th>
                                <td><span>{{doctor.Rank}}</span></td>
                            </tr>
                            <tr>
                                <th><span class="glyphicon glyphicon-education"></span></th>
                                <td><span>{{doctor.Voters}}</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <button class="btn btn-primary btn-flat btn-block"
                            ng-show="doctor.Status !== 2"
                            ng-hide="doctor.Status === 2">
                        Activate
                    </button>

                    <button class="btn btn-danger btn-flat btn-block"
                            ng-show="doctor.Status === 2">
                        Disable
                    </button>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <ul uib-pagination
                total-items="data.Total"
                items-per-page="pagination.records"
                ng-model="pagination.page"
                first-text="&laquo;"
                last-text="&raquo;"
                previous-text="&lt;"
                next-text="&gt;"
                ng-disabled="isResultLoading"
                ng-change="getDoctors(pagination.page - 1)"></ul>
        </div>
    </div>

</section>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>

<!-- View model -->
<script src="~/Scripts/angular/viewmodel/filter-doctor-sort.viewmodel.js"></script>

<!-- Enumeration -->
<script src="~/Scripts/angular/enumeration/gender.enum.js"></script>
<script src="~/Scripts/angular/enumeration/sort-direction.enum.js"></script>
<script src="~/Scripts/angular/enumeration/status.enum.js"></script>

<script>
    angular.module("DoctorModule", ["ui.bootstrap", "ui.bootstrap.pagination"]);
</script>

<script src="~/Scripts/angular/controller/doctor-management-controller.js"></script>