@using Olive.Admin.Resources
@using Shared.Constants
@model Shared.ViewModels.LoginViewModel

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = Olive_Admin_Language.Login;

    var properties = new Dictionary<string, object>();
}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="javascript:void(0);"><b>Admin</b>LTE</a>
        </div>

        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
            {
                <div class="form-group has-feedback">
                    @{
                        properties = new Dictionary<string, object>();
                        properties.Add("type", "email");
                        properties.Add("class", "form-control");
                        properties.Add("maxlength", FieldLength.EmailMaxLength);
                    }
                    @Html.TextBoxFor(x => x.Email, properties)
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @{
                        properties = new Dictionary<string, object>();
                        properties.Add("class", "form-control");
                        properties.Add("maxlength", FieldLength.PasswordMaxLength);
                    }
                    @Html.PasswordFor(x => x.Password, properties)
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div>
                    @Html.ValidationSummary()
                </div>

                <div class="form-group has-feedback">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">@Olive_Admin_Language.Login</button>
                </div>
            }

            <!-- /.social-auth-links -->
            <a href="javascript:void(0);">I forgot my password</a><br>
        </div>
    </div>
</body>